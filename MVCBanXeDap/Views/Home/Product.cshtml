@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style scoped>
    .nav-item {
        margin-bottom: 15px; /* Khoảng cách giữa các dropdown */
    }

    select {
        z-index: 1050;
        position: relative;
        min-width: 200px; /* Đảm bảo kích thước tối thiểu */
    }

    .nav {
        overflow: visible !important; /* Đảm bảo không bị cắt */
    }
    .product__item__pic {
        position: relative;
        overflow: hidden;
    }

    .hover-overlay {
        border-radius: 10px;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 10;
    }

    .hover-text {
        color: #fff;
        font-size: 16px;
        text-transform: uppercase;
        font-weight: bold;
        text-decoration: none;
    }

    .product__item__pic:hover .hover-overlay {
        opacity: 1;
    }

    .dropdown-container {
        width: 100%;
        position: relative;
        z-index: 1000;
        justify-content: center;
    }
    
</style>
<nav class="p-3 bg-light">
    <form method="get" action="/Home/Product" id="filterForm">
        <ul class="nav nav-pills mb-3 d-flex justify-content-between align-items-center flex-wrap gap-3" id="pills-tab" role="tablist">
            <!-- Tìm kiếm -->
            <li class="nav-item form-group d-flex align-items-center flex-grow-1" role="presentation">
                <label for="timKiem" class="form-label me-2">Tìm kiếm:</label>
                <input type="text" id="timKiem" name="timKiem" class="form-control" value="@ViewBag.TimKiem" placeholder="Nhập tên sản phẩm" />
            </li>

            <!-- Danh mục -->
            <li class="nav-item form-group d-flex align-items-center flex-grow-1" role="presentation">
                <label for="maDanhMuc" class="form-label me-2">Danh mục:</label>
                <div class="dropdown-container">
                <select id="maDanhMuc" name="maDanhMuc" class="w-100">
                    <option value="">Tất cả</option>
                    @foreach (var category in ViewBag.Category as List<DanhmucVM>)
                    {
                        if (category.MaDanhMuc == ViewBag.MaDanhMuc)
                        {
                            <option selected value="@category.MaDanhMuc">@category.TenDanhMuc</option>
                        }
                        else
                        {
                            <option value="@category.MaDanhMuc">@category.TenDanhMuc</option>
                        }
                    }
                </select>
                </div>
            </li>

            <!-- Thương hiệu -->
            <li class="nav-item form-group d-flex align-items-center flex-grow-1" role="presentation">
                <label for="maThuongHieu" class="form-label me-2">Thương hiệu:</label>
                <div class="dropdown-container">
                <select id="maThuongHieu" name="maThuongHieu" class="w-100" >
                    <option value="">Tất cả</option>
                    @foreach (var brand in ViewBag.Brand as List<BrandVM>)
                    {
                        @if (brand.MaThuongHieu == ViewBag.MaThuongHieu)
                        {
                            <option selected value="@brand.MaThuongHieu">@brand.TenThuongHieu</option>
                        }
                        else
                        {
                            <option value="@brand.MaThuongHieu">@brand.TenThuongHieu</option>
                        }
                    }
                </select>
                </div>
            </li>

            <!-- Sắp xếp -->
            <li class="nav-item form-group d-flex align-items-center flex-grow-1" role="presentation">
                <label for="sapXep" class="form-label me-2">Sắp xếp:</label>
                <div class="dropdown-container">
                <select id="sapXep" name="sapXep" class="w-100">
                    @if (ViewBag.SapXep == "asc")
                    {
                        <option selected value="asc">Giá tăng dần</option>
                        <option value="desc">Giá giảm dần</option>
                    }
                    else
                    {
                        <option value="asc">Giá tăng dần</option>
                        <option selected value="desc">Giá giảm dần</option>
                    }
                </select>
                </div>
            </li>

            <!-- Nút Tìm kiếm -->
            <li class="nav-item form-group d-flex align-items-center flex-grow-1" role="presentation">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-check-lg"></i></button>
            </li>
        </ul>
    </form>
</nav>

<div class="container py-5">
    

    <h2 class="text-center mb-4">Sản phẩm</h2>

    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="product__item">
                    <div class="product__item__pic set-bg">
                        <img src="/Hinh/SanPham/@product.Hinh" alt="@product.TenSp" style="border-radius: 10px" />
                        <div class="hover-overlay">
                            <a href="@Url.Action("Details", "Home", new { id = product.MaSP })" class="btn btn-danger btn-sm">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                    <div class="product__item__text">
                        <h6>@product.TenSp</h6>
                        <a href="#" class="add-cart">+ Thêm vào giỏ hàng</a>

                        <h6 style="color:red;">@product.MinPrice VNĐ - @product.MaxPrice VNĐ</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Phân trang -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                <a class="page-link" data-page="@i" href="@Url.Action("Product", new { keywords = ViewBag.Keywords, MaDanhMuc = ViewBag.MaDanhMuc, page = i })">@i</a>
            </li>
        }
    </ul>
</nav>

