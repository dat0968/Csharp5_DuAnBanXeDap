@using MVCBanXeDap.ViewModels
@model IEnumerable<ProductVM>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Sản phẩm bán chạy</h2>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="product__item">
                    <div class="product__item__pic set-bg">
                        <img src="/Hinh/SanPham/@product.Hinh" alt="@product.TenSp" style="border-radius: 10px"/>
                        <div class="hover-overlay">
                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modal-@product.MaSP">
                                <i class="fas fa-eye"></i> Chi tiết
                            </button>
                            <partial name="_ProductDetails" model="@product"></partial>
                        </div>
                    </div>
                    <div class="product__item__text">
                        <h6>@product.TenSp</h6>
                        <a href="#" class="add-cart">+ Thêm vào giỏ hàng</a>
                        
                        
                        <h5>@product.KhoangGia VNĐ</h5>
                        
                    </div>
                </div>
            </div>

        }
    </div>
</div>
<style scoped>
    .product__item__pic {
        position: relative;
        overflow: hidden;
    }

    .hover-overlay {
        border-radius: 10px;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.6);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        z-index: 10;
    }

    .hover-text {
        color: #fff;
        font-size: 16px;
        text-transform: uppercase;
        font-weight: bold;
        text-decoration: none;
    }

    .product__item__pic:hover .hover-overlay {
        opacity: 1;
    }
</style>
