@{
    ViewData["Title"] = "Lỗi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lỗi @ViewBag.StatusCode</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
        background-color: #f8f9fa;
        }

        .error-container {
        text-align: center;
        margin-top: 10%;
        }

        .error-code {
        font-size: 120px;
        font-weight: bold;
        color: #dc3545;
        }

        .error-message {
        font-size: 22px;
        font-weight: 500;
        }

        .btn-home {
        margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="error-container">           
            <div class="error-code">@ViewBag.StatusCode</div>
            <p class="error-message">@ViewBag.ErrorMessage</p>
            @if (@ViewBag.StatusCode == 404)
            {
                <a href="/" class="btn btn-primary btn-home">🏠 Về Trang Chủ</a>
            }
        </div>
    </div>

</body>
</html>
