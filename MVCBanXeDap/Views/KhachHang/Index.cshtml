@model MVCBanXeDap.ViewModels.PagedResult<MVCBanXeDap.ViewModels.KhachHangVM>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Khách Hàng";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.css">
<style>
    .custom-modal-width {
        max-width: 80%; /* Hoặc chỉnh sửa giá trị theo nhu cầu */
    }

    .modal-dialog {
        max-width: 80%; /* Hoặc điều chỉnh theo tỷ lệ hoặc đơn vị khác */
        margin: 30px auto; /* Tùy chỉnh để căn chỉnh modal ở giữa */
    }

    .table {
        font-size: 14px;
    }

    .draggable-row {
        cursor: move;
    }

    .dropzone {
        border: 2px dashed #007bff;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: background-color 0.3s;
        height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

        .dropzone.dragover {
            background-color: #e7f1ff;
        }

        .dropzone h5 {
            margin: 0;
            font-size: 18px;
            margin-top: 10px;
        }

        .dropzone i {
            font-size: 48px;
            color: #007bff;
        }



    .dropzone {
        border: 2px dashed #007bff;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        transition: background-color 0.3s;
        height: 120px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-bottom: 20px;
    }

        .dropzone.dragover {
            background-color: #e7f1ff;
        }

        .dropzone h5 {
            margin: 0;
            font-size: 18px;
            margin-top: 10px;
        }

