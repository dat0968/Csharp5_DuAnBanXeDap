@using MVCBanXeDap.ViewModels
@model IEnumerable<SupplierVM>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .input-number {
        width: 100%;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        border: 1px solid #ced4da;
    }

        .input-number:focus {
            border-color: #80bdff;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
        }
</style>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Danh sách nhà cung cấp</h4>
        </div>
        <div class="card-body">
            <!-- Tìm kiếm nhà cung cấp -->
            <div class="row mb-3">
                <div class="col-md-3">
                    <input id="keywords" value="@ViewBag.Keywords" name="keywords" type="text" class="form-control" placeholder="Tìm kiếm nhà cung cấp..." />
                </div>
                <div class="col-md-3">
                    <select id="SortByPrice" class="form-select">
                        <option selected="@(string.IsNullOrEmpty(ViewBag.Sort))">Sắp xếp</option>
                        <option value="@(ViewBag.Sort == "asc" ? "selected" : "")">Tên: A-Z</option>
                        <option value="@(ViewBag.Sort == "desc" ? "selected" : "")">Tên: Z-A</option>
                    </select>
                </div>
            </div>

            <!-- Nút thêm nhà cung cấp -->
            <div class="d-flex justify-content-start mb-3">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSupplierModal">
                    <i class="fas fa-plus"></i> Thêm nhà cung cấp
                </button>
            </div>
            <!-- Danh sách nhà cung cấp -->
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Tên Nhà Cung Cấp</th>
                            <th>Địa Chỉ</th>
                            <th>Email</th>
                            <th>Số Điện Thoại</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="basic-datatables">
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.TenNhaCc</td>
                                <td>@supplier.DiaChi</td>
                                <td>@supplier.Email</td>
                                <td>@supplier.Sdt</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modal-@supplier.MaNhaCc">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </button>
                                        @* <partial name="" model="@supplier"></partial> *@
                                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modal-@supplier.MaNhaCc-edit">
                                            <i class="fas fa-edit"></i> Sửa
                                        </button>
                                        <partial name="_SupplierEdit" model="@supplier"></partial>
                                        <form method="post" asp-action="DeleteSupplier" asp-controller="Supplier" asp-route-id="@supplier.MaNhaCc" style="display: inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này không?')">
                                            <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Thêm Nhà Cung Cấp -->
<partial name="_SupplierCreate"></partial>
<!-- Phân trang -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.Page == i ? "active" : "")">
                <a class="page-link" data-page="@i" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
        }
    </ul>
</nav> 
<script>
    const keywords = document.getElementById("keywords");
    function GenerateTableSupplier() {
        fetch(`https://localhost:7137/api/Suppliers/GetAllSupplier?keywords=${keywords.value}&sort=""&page=1`)
            .then(response => response.json())
            .then(data => {
                const tbody = document.querySelector("#basic-datatables");
                tbody.innerHTML = "";
                if (data && data.data) {
                    data.data.forEach(supplier => {
                        const row = `
                                    <tr>
                                        <td>${supplier.tenNhaCc}</td>
                                        <td>${supplier.diaChi}</td>
                                        <td>${supplier.email}</td>
                                        <td>${supplier.sdt}</td>
                                            <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#modal-${supplier.maNhaCc}">
                                                <i class="fas fa-eye"></i> Chi tiết
                                            </button>
                                            <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modal-${supplier.maNhaCc}-edit">
                                                <i class="fas fa-edit"></i> Sửa
                                            </button>
                                                    <div class="modal fade" id="modal-${supplier.maNhaCc}-edit" tabindex="-1" aria-labelledby="addSupplierModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="editSupplierModalLabel">Sửa thông tin nhà cung cấp</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                                <form <link href="_SupplierEdit" rel="stylesheet" /> method="post" enctype="multipart/form-data">
                                                                    <input value="${supplier.maNhaCc}" type="hidden" class="form-control" id="MaNhaCc" name="MaNhaCc" readonly>
                                                            <div class="mb-3">
                                                                <label class="form-label">Tên nhà cung cấp </label>
                                                                        <input value="${supplier.tenNhaCc}" type="text" class="form-control" id="TenNhaCc" name="TenNhaCc" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Địa chỉ nhà cung cấp </label>
                                                                        <input value="${supplier.diaChi}" type="text" class="form-control" id="DiaChi" name="DiaChi" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Email nhà cung cấp </label>
                                                                        <input value="${supplier.email}" type="text" class="form-control" id="Email" name="Email" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label class="form-label">Số điện thoại nhà cung cấp </label>
                                                                        <input value="${supplier.sdt}" type="text" class="form-control" id="Sdt" name="Sdt" required>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                            <button type="submit" class="btn btn-primary" form="editSupplierForm_${supplier.maNhaCc}">Lưu</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                            <form method="post" asp-action="DeleteSupplier" asp-controller="Supplier" asp-route-id="${supplier.maNhaCc}" style="display: inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa nhà cung cấp này không?')">
                                                <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Xóa</button>
                                            </form>
                                        </div>
                                    </td>
                                    </tr>
                                `;
                        tbody.innerHTML += row;
                    });
                }
            })
            .catch(error => {
                console.error("Lỗi khi tải dữ liệu:", error);
            });
    }
    keywords.addEventListener("input", function () {
        GenerateTableSupplier()
    });
</script>