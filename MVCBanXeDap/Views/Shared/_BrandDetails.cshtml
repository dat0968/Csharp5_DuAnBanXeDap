@using MVCBanXeDap.ViewModels
@model BrandVM

<!-- Modal -->
<!-- Modal -->
<div class="modal fade" id="modal-@Model.MaThuongHieu" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailModalLabel">Thông tin chi tiết thương hiệu</h5>
                <button id="closeModel" type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <h4>@Model.TenThuongHieu</h4>
                        <!-- Thêm các thông tin khác về thương hiệu nếu có -->
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

