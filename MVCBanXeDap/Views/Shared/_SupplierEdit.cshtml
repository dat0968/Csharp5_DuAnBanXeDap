@using MVCBanXeDap.ViewModels
@model SupplierVM
<style>
    table.table td,
    table.table th {
    text-align: left;
    vertical-align: middle; /* Giúp căn giữa theo chiều dọc */
    }
</style>

<div class="modal fade" id="modal-@Model.MaNhaCc-edit" tabindex="-1" aria-labelledby="addSupplierModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSupplierModalLabel">Sửa thông tin nhà cung cấp</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="EditSupplier" asp-controller="Supplier" id="editSupplierForm_@Model.MaNhaCc" method="post" enctype="multipart/form-data">
                    <input value="@Model.MaNhaCc" type="hidden" class="form-control" id="MaNhaCc" name="MaNhaCc" readonly>
                    <div class="mb-3">
                        <label class="form-label">Tên nhà cung cấp </label>
                        <input value="@Model.TenNhaCc" type="text" class="form-control" id="TenNhaCc" name="TenNhaCc" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ nhà cung cấp </label>
                        <input value="@Model.DiaChi" type="text" class="form-control" id="DiaChi" name="DiaChi" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email nhà cung cấp </label>
                        <input value="@Model.Email" type="text" class="form-control" id="Email" name="Email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại nhà cung cấp </label>
                        <input value="@Model.Sdt" type="text" class="form-control" id="Sdt" name="Sdt" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="submit" class="btn btn-primary" form="editSupplierForm_@Model.MaNhaCc">Lưu</button>
            </div>
        </div>
    </div>
</div>
